<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DasBoardt"
    android:background="@color/co"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="164dp"
        android:layout_height="130dp"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="75dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="331dp"
        android:layout_height="0dp"
        android:layout_marginBottom="291dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_marginRight="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_coffee1"
                android:layout_width="128dp"
                android:layout_height="55dp"
                android:padding="10dp"
                android:backgroundTint="@color/as"
                android:text="Menú"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />



            <Button
                android:id="@+id/button_coffee2"
                android:layout_width="132dp"
                android:layout_height="56dp"
                android:layout_marginLeft="50dp"
                android:textSize="17dp"

                android:backgroundTint="@color/as"
                android:padding="10dp"
                android:text="Tipos de café"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_coffee3"
                android:layout_width="128dp"
                android:layout_height="52dp"
                android:backgroundTint="@color/as"
                android:padding="10dp"
                android:text="Información"
                android:textSize="19dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_coffee4"
                android:layout_width="130dp"
                android:layout_height="52dp"
                android:layout_marginLeft="50dp"
                android:backgroundTint="@color/as"
                android:padding="10dp"
                android:textSize="20dp"

                android:text="Ayuda"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>